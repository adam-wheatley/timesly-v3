datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String  @default(cuid()) @id
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(references: [id])
}

model Company {
  id    String @default(cuid()) @id
  name  String
  users User[]
}

model User {
  id           String  @default(cuid()) @id
  email        String  @unique
  password     String
  firstName    String?
  lastName     String?
  tokenVersion Int     @default(0)
  isActive     Boolean @default(true)
  posts        Post[]
  company      Company @relation(references: [id])
}