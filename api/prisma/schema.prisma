datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int     @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean @default(false)
  author    User?   @relation(references: [id])
}

model User {
  id           Int     @default(autoincrement()) @id
  email        String  @unique
  posts        Post[]
  password     String
  firstName    String?
  lastName     String?
  tokenVersion Int     @default(0)
  isActive     Boolean @default(true)
}